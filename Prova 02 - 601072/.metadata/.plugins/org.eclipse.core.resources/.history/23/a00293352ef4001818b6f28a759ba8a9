
public class Time {
	private String nome;
	private int saldo;
	private int gols = 0;

	public Time(String nome, int saldo, int gols) {

		this.nome = nome;
		this.saldo = saldo;
		this.gols = gols;
	}

	public String getNome() {
		return nome;
	}

	public void setNome(String nome) {
		this.nome = nome;
	}

	public int getSaldo() {
		return saldo;
	}

	public void setSaldo(int saldo) {
		this.saldo = saldo;
	}

	public int getGols() {
		return gols;
	}

	public void setGols(int gols) {
		this.gols = gols;
	}

	
}
